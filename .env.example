# GitHub Configuration
GITHUB_TOKEN=your_github_token_here

# Database Configuration
# For SQLite (local development)
SQLITE_PATH=./data/events.db

# For Supabase (production)
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Execution Configuration
EXECUTION_TIMEOUT=30  # Maximum execution time in seconds
MAX_EXECUTIONS_PER_HOUR=100  # Rate limiting for executions

# Notification Configuration
NOTIFICATION_ENABLED=true  # Enable/disable Windows notifications

# Ngrok Configuration (for local development with public webhook URL)
NGROK_AUTH_TOKEN=your_ngrok_auth_token_here
NGROK_ENABLED=false  # Set to true to enable ngrok for local development
